@model ProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutUI.cshtml";
}


@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.2.96/css/materialdesignicons.min.css" />
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Profile/@Model.Username">Profile</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Username</li>
    </ol>
</nav>


<div class="container">
    <div class="row">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body pb-0">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <div class="text-center border-end">
                                <img width="100px" height="100px" src="@(Model.PictureUrl != null ? "/uploads/images/"+Model.PictureUrl : "/assets/images/default_profile_foto.jpg")" class="rounded-circle" alt="">
                                <h4 class="text-primary font-size-20 mt-3 mb-2">@Model.Name @Model.Surname</h4>
                                <h5 class="text-muted font-size-13 mb-0">@(Model.Title != null ? Model.Title : "")</h5>
                            </div>
                        </div><!-- end col -->
                        <div class="col-md-9">
                            <div class="ms-3">
                                <div>
                                    <h4 class="card-title mb-2">Biyografi</h4>
                                    <p class="mb-0 text-muted">
                                        Merhaba ben Fırat Kaan, Erciyes Üniversitesi Bilgisayar Mühendisliği 4. Sınıf öğrencisiyim. Vitalen Otomotiv'de stajyer öğrenciyim.
                                    </p>
                                </div>
                                <div class="row my-4">
                                    <div class="col-md-12">
                                        <div>
                                            <p class="text-muted mb-2 fw-medium">
                                                <i class="mdi mdi-email-outline me-2"></i> @Model.Email
                                            </p>
                                            <p class="text-muted fw-medium mb-0">
                                                <i class="mdi mdi-phone-in-talk-outline me-2"></i>+90 507 111 1111
                                            </p>
                                        </div>
                                    </div><!-- end col -->
                                </div><!-- end row -->
@* 
                                <ul class="nav nav-tabs nav-tabs-custom border-bottom-0 mt-3 nav-justfied" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link px-4 active" data-bs-toggle="tab" href="#projects-tab" role="tab" aria-selected="false" tabindex="-1">
                                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                                            <span class="d-none d-sm-block">Projects</span>
                                        </a>
                                    </li><!-- end li -->
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link px-4" href="https://bootdey.com/snippets/view/profile-task-with-team-cards" target="__blank">
                                            <span class="d-block d-sm-none"><i class="mdi mdi-menu-open"></i></span>
                                            <span class="d-none d-sm-block">Tasks</span>
                                        </a>
                                    </li><!-- end li -->
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link px-4 " href="https://bootdey.com/snippets/view/profile-with-team-section" target="__blank">
                                            <span class="d-block d-sm-none"><i class="mdi mdi-account-group-outline"></i></span>
                                            <span class="d-none d-sm-block">Team</span>
                                        </a>
                                    </li><!-- end li -->
                                </ul><!-- end ul --> *@
                            </div>
                        </div><!-- end col -->
                    </div><!-- end row -->
                </div><!-- end card body -->
            </div><!-- end card -->

           
        </div><!-- end col -->

        <div class="col-xl-4">
            <div class="card">
                <div class="card-body">
                    <div class="pb-2">
                        <h4 class="card-title mb-3">Hakkında</h4>
                        <p>
                            @(Model.About != null ? Model.About : "")
                        </p>
                        <ul class="ps-3 mb-0">
                            <li>Mükemmeliyetçi.</li>
                            <li>Disipline önem verir.</li>
                        </ul>
                        <!-- end ul -->
                    </div>
                    <hr>
                    <div class="pt-2">
                        <h4 class="card-title mb-4">Yetenekler</h4>
                        <div class="d-flex gap-2 flex-wrap">
                            <span class="badge badge-soft-secondary p-2">HTML</span>
                            <span class="badge badge-soft-secondary p-2">Bootstrap</span>
                            <span class="badge badge-soft-secondary p-2">C#</span>
                            <span class="badge badge-soft-secondary p-2">ASP.NET CORE MVC</span>
                            <span class="badge badge-soft-secondary p-2">CSS</span>
                            <span class="badge badge-soft-secondary p-2">JS</span>
                        </div>
                    </div>
                </div><!-- end cardbody -->
            </div><!-- end card -->

            <div class="card">
                <div class="card-body">
                    <div>
                        <h4 class="card-title mb-4">Kişisel Detaylar</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered mb-0">
                                <tbody>
                                    <tr>
                                        <th scope="row">İsim Soyisim</th>
                                        <td>@Model.Name @Model.Surname</td>
                                    </tr><!-- end tr -->
                                    @if(Model.Location != null)
                                    {
                                        <tr>

                                            <th scope="row">Location</th>
                                            <td>@Model.Location</td>
                                        </tr>

                                        
                                    }
                                    
                                    <tr>
                                        <th scope="row">Dil</th>
                                        <td>Türkçe</td>
                                        
                                    </tr><!-- end tr -->
                                    <tr>
                                        <th scope="row">Website</th>
                                        <td>github.com/fkaanc</td>
                                    </tr><!-- end tr -->
                                </tbody><!-- end tbody -->
                            </table><!-- end table -->
                        </div>
                    </div>
                </div><!-- end card body -->
            </div><!-- end card -->

            <div class="card">
                <div class="card-body">
                    <div>
                        <h4 class="card-title mb-4">İş Tecrübeleri</h4>
                        <ul class="list-unstyled work-activity mb-0">
                            <li class="work-item" data-date="2020-21">
                                <h6 class="lh-base mb-0">Vitalen Otomotiv A.Ş.</h6>
                                <p class="font-size-13 mb-2">Back-end Developer Intern</p>
                                <p>
                                    24 iş günü süren yazılım stajı
                                </p>
                            </li>
                            
                        </ul><!-- end ul -->
                    </div>
                </div><!-- end card-body -->
            </div><!-- end card -->
        </div><!-- end col -->
    </div>
</div>