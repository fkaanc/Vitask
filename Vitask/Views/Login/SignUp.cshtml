@model Vitask.Models.SignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminmart-master/assets/images/favicon.png">
    <title>Sign Up - Vitask</title>
    <link href="~/adminmart-master/dist/css/style.min.css" rel="stylesheet">

</head>

<body>
    <div class="main-wrapper">

        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>

        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
             style="background:url(/assets/images/auth-bg.jpg) no-repeat center center;">
            @* <div class="auth-box row text-center">
                <div class="col-lg-7 col-md-5 modal-bg-img" style="background-image: url(/assets/images/cizmeli_kedi.jpg);background-size: cover;">
                </div> *@
                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-3">
                        <img src="~/adminmart-master/assets/images/big/icon.png" alt="wrapkit">
                    <h2 class="mt-3 text-center">ViTask Proje Yönetim Uygulaması</h2>
                        <form method="post" class="mt-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input asp-for="Name" class="form-control" type="text" placeholder="Ad">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Surname" type="text" placeholder="Soyad">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Email" type="email" placeholder="E-mail">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Password" type="password" placeholder="Şifre">
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-block btn-dark">Kayıt Ol</button>
                                </div>
                                <div class="col-lg-12 text-center mt-5">
                                    Zaten hesabınız var mı? <a href="/Login/Index/" class="text-danger">Giriş Yapın</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/adminmart-master/assets/libs/jquery/dist/jquery.min.js "></script>
    <script src="~/adminmart-master/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="~/adminmart-master/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>

    <script>
        $(".preloader ").fadeOut();
    </script>
</body>

</html>
</html>